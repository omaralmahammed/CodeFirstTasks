@{
    ViewBag.Title = "Dashboard";
}


<!-- Add Bootstrap and Tailwind -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">

<!-- Page Content -->
<div class="container mt-5">
    <!-- Welcome Message -->
    <div class="text-center mb-4">
        <h1 class="fw-bold" style="color: #0d6efd; font-family: 'Nunito', sans-serif;">Welcome to the School System</h1>
        <p class="lead">Here you can manage classes and subjects efficiently</p>
    </div>

    <div class="row">
        <!-- Display Classes -->
        <div class="col-md-6 mb-4">
            <h3>Classes</h3>
            <div class="d-flex flex-column gap-4">
                @foreach (var classItem in ViewBag.Classes)
                {
                    <div class="card-style p-4">
                        <p class="heading-style">@classItem.ClassName</p>
                        <p class="description-style">Manage students and assignments for this class.</p>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "Students", new { classId = classItem.ClassId })" class="button-style">Show Students</a>
                            <a href="@Url.Action("Index", "Assignments", new { classId = classItem.ClassId })" class="button-style">View Assignments</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Display Subjects -->
        <div class="col-md-6 mb-4">
            <h3>Subjects</h3>
            <div class="card-style p-4">
                <p class="heading-style">Subjects</p>
                <p class="description-style">View and manage subjects across different classes.</p>
                <a href="@Url.Action("Index", "Subjects")" class="button-style">Show Subjects</a>
            </div>
        </div>
    </div>
</div>

<!-- CSS Styling -->
<style>
    /* Card Styling */
    .card-style {
        background-color: white;
        border: 2px solid #0d6efd; /* Bootstrap primary border */
        border-radius: 15px; /* Light radius */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Light shadow */
        color: black;
        font-family: 'Nunito', sans-serif; /* Nice font */
        transition: transform 0.2s;
    }

        /* Hover effect for cards */
        .card-style:hover {
            transform: translateY(-5px); /* Lift on hover */
        }

    /* Heading Styling */
    .heading-style {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 0.5em;
    }

    /* Description Styling */
    .description-style {
        font-size: 1em;
        margin-bottom: 1em;
    }

    /* Button Styling */
    .button-style {
        padding: 0.5em 1em;
        border: 1px solid #0d6efd; /* Bootstrap primary border */
        border-radius: 5px;
        background-color: transparent;
        color: #0d6efd; /* Bootstrap primary color */
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.2s, color 0.2s;
    }

        /* Button Hover Effect */
        .button-style:hover {
            background-color: #0d6efd; /* Bootstrap primary background */
            color: white;
        }
</style>
